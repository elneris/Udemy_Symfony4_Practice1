{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <table>
        <thead>
        <tr>
            <th colspan="2">Titre du livre</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
        <tr>

            <td><a href="{{ path('show', {title: book}) }}">{{ book }}</a> </td>

        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}